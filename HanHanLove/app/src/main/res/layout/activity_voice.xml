<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VoiceActivity">

    <TextView
        android:id="@+id/tvText"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp460"
        android:lineSpacingMultiplier="1.3"
        android:paddingStart="@dimen/dp16"
        android:paddingEnd="@dimen/dp16"
        android:textColor="#343434"
        android:textSize="@dimen/dp16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.39" />

    <TextView
        android:id="@+id/tvPause"
        android:layout_width="@dimen/dp100"
        android:layout_height="@dimen/dp35"
        android:background="@drawable/background_btn_next"
        android:clickable="true"
        android:gravity="center"
        android:text="暂  停"
        android:textColor="#6D9FCA"
        android:textStyle="bold"
        android:translationZ="@dimen/dp1_0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.945" />

    <ImageView
        android:id="@+id/ivMusic"
        android:layout_width="@dimen/dp35"
        android:layout_height="@dimen/dp35"
        android:src="@drawable/ic_music2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dp34"
        android:layout_marginEnd="@dimen/dp18"/>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:translationZ="@dimen/dp2"
        android:background="@drawable/top_album"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>